<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.salon.mapper.ReviewMapper">
	
	<select id="select" parameterType="Integer" resultType="Review">
		SELECT * FROM review WHERE review_no=#{review_no}
	</select>
	
	<select id="selectall" resultType="User">
		SELECT * FROM review
	</select>
	
	<insert id="insert" parameterType="User">
		INSERT INTO review VALUES (#{useremail},#{userpwd},#{username},#{birth},#{tel},#{addr},#{zipcode},NOW())
	</insert>
	
	<update id="update" parameterType="User">
		UPDATE review SET username=#{username},addr=#{addr}, zipcode=#{zipcode} WHERE useremail=#{useremail}
	</update>
	
	<delete id="delete" parameterType="String">
		DELETE FROM review WHERE useremail=#{useremail}
	</delete>
	
</mapper>